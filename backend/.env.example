# Example backend environment variables
# Copy this to backend/.env or set in your environment. DO NOT commit secrets.

# Database (Postgres/Neon)
DATABASE_URL=postgresql://user:password@db-host:5432/dbname

# Application secret for signing sessions/tokens
AUTH_SECRET=change-me-secret

# API token for internal API calls (if used)
API_TOKEN=changeme_api_token

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000

# SearxNG search service base URL
SEARXNG_BASE_URL=http://localhost:8080

# MCP provider settings
MCP_API_BASE=http://localhost:8001
MCP_API_TOKEN=changeme_mcp_token
MCP_SESSION_USER=guest

# Optional: external services
OPENAI_API_KEY=sk-xxxx
REDIS_URL=redis://localhost:6379/0
