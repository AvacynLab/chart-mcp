{
  "name": "chart-mcp",
  "version": "0.1.0",
  "private": true,
  "description": "Tooling scripts for chart-mcp CI and local workflows",
  "dependencies": {
    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=20.10"
  },
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "clean": "python -m chart_mcp.cli.cleanup",
    "build": "python -m compileall src",
    "test": "pytest -q",
    "lint": "ruff check . && black --check src tests && isort --check-only src tests && mypy src",
    "lint:fix": "ruff check --fix . && black src tests && isort src tests"
  },
  "devDependencies": {
    "esbuild": "^0.21.5",
    "@playwright/test": "1.47.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "jsdom": "^23.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.4.0"
  }
}
